#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ğŸŒ Bandwidth module" "/ï£: Traffic received
        ï¢: Traffic transmitted 
        - Right click to open bmon." ;;
	3) setsid -f "$TERMINAL" -e bmon ;;
esac

update() {
    sum=0
    for arg; do
        read -r i < "$arg"
        sum=$(( sum + i ))
    done
    cache=/tmp/${1##*/}
    [ -f "$cache" ] && read -r old < "$cache" || old=0
    printf %d\\n "$sum" > "$cache"
    printf %d\\n $(( sum - old ))
}

rx=$(update /sys/class/net/[ew]*/statistics/rx_bytes)
tx=$(update /sys/class/net/[ew]*/statistics/tx_bytes)

printf "ï£ %4sB ï¢ %4sB\\n" $(numfmt --to=iec $rx $tx)
