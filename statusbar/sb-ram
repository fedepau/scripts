#!/bin/bash

case $BUTTON in
	1) notify-send "ï”¸ Memory module " "\- Shows RAM usage.
- Middle click: open htop.
- Right click: show RAM intensive processes." ;;
	2) setsid -f "st" -e htop ;;
	3) notify-send "ðŸ–¥ RAM hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)\\n(100% RAM)" ;;
esac

memory=$(free -h | awk '/^Mem/ { print $3"/"$2 }' | sed s/i//g)

echo "^C3^^B0^[ï”¸ $memory]^d^"
