#!/bin/sh

case $BUTTON in
	1) notify-send "ğŸ”‹ Battery module" "\- Shows battery perchentage.
- Right click: show status and remamining time." ;;
    3) notify-send "$(acpi -V | grep "Battery 0" | head -1)" ;;
esac

battery=/sys/class/power_supply/BAT0
bat="$(cat $battery/status 2>&1)"
capacity="$(cat $battery/capacity 2>&1)"

case $bat in
	"Full") status="âš¡" ;;
	"Discharging")
		if [ "$capacity" -gt "75" ]; then
			status="ğŸ”‹"
		elif [ "$capacity" -gt "50" ]; then
			status="ï‰"
		elif [ "$capacity" -gt "25" ]; then
			status="ï‰‚"
		elif [ "$capacity" -gt "10" ]; then
			status="ï‰ƒ"
		else
			status="ï‰„"
		fi ;;
	"Charging")
        status="ğŸ”Œ" ;;
	"Not charging") status="ï†ˆ" ;;
	"Unknown") status="ï„¨" ;;
	*) exit 1 ;;
esac

echo "[$status $capacity%]"
